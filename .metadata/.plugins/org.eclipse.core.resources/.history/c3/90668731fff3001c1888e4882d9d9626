package entities;

public class HotelRoom {

	private int rent;
	private String name;
	private String email;
	private int room;
	
	//Constructs
	public HotelRoom(int rent, String name, String email, int room) {
		this.rent = rent;
		this.name = name;
		this.email = email;
		this.room = room;
	}

	//Getters and Setters
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getEmail() {
		return email;
	}

	public void setEmail(String email) {
		this.email = email;
	}

	public int getRoom() {
		return room;
	}

	public void setRoom(int room) {
		this.room = room;
	};
	
	public int getRent() {
		return rent;
	}

	public void setRent(int rent) {
		this.rent = rent;
	};
	
	public String toString() {
		return 	"Rent #"
				+ getRent()
				+ "Name: "
				+ getName()
				+ "Email: "
				+ getEmail()
				+ "Room:"
				+ getRoom();
	}
}
